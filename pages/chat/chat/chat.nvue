					 class="bg-light-s position-fixed left-0 right-0 px-3"
					 :style="chatBodyBottom">
			<!-- 聊天消息列表组件 -->
			<block v-for="(item, index) in lists" :key="index">
				<wx-chat-item :id="item.chatItemId"
							  :item="item"
