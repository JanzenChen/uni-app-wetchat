<template>
	<div class="page">
		<!-- 导航栏 -->
		<wx-nav-bar showBack title="聊天对象名" fixed>
			<wx-icon-button slot="right" :icon="`\ue6fd`" @click="openChatSet"></wx-icon-button>
		</wx-nav-bar>
		
		<!-- 聊天内容区域 -->
